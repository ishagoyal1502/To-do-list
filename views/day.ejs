<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%=day%> </h1>
    </div>
<div class="box">
  <form method="post" action="/delete">
    <% for(var i=0;i<items.length;i++) { %>
      <div class="item">
        <input type="checkbox" name="todelete" onChange="this.form.submit()" value="<%=items[i]._id%>">
        <p>
          <%=items[i].log%>
        </p>
      </div>
    <% } %>
      <input type="hidden" name="listTitle" value=<%=listTitle%> ></input>
  </form>


  <form action="/" method="post" class="item">
    <input type="text" name="newToDo" placeholder="New Task" autocomplete="off" >
    <button type="submit" value="<%=listTitle%>" name="submit">+</button>
  </form>
</div>

<%- include("footer") -%>
